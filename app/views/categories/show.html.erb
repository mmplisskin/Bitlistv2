<div class="panel panel-body">
  <div class="jumbotron">
    <h1><%= @category.name %></h1>
    <%= link_to "Back to All Categories", categories_path %>
  </div>

  <% @category.items.each do |item| %>
  <div class="well well-lg" id="categoryNAMES">
  <div class="row">
    <div class="col-xs-4 col-sm-4 col-md-4"><h3><%= item.name %></h3></div>
    <div class="col-xs-6 col-md-6"><h4><i><%= item.city %></i></h4></div>
      <% price = item.price %>
    <div class="col-xs-2 col-md-2"><h5><%= number_to_currency(price) %></h5></div>
  </div>
  <div class="panel panel-body"style="display:none;">
  <div class="row">
    <div class="col-xs-4 col-sm-4 col-md-4"><h3><%= item.description %></h3></div>
  </div>
</div>
  <!-- <a href="/categories/<%=item.category_id%>/items/<%=item.id%>"> </a> -->
</div>
      <%#= link_to item.name, category_item_path(@category.id, item.id) %>









  <% end %>
</div>



