<div class="col-md-3">
</div>
<div class="col-md-6"
</div>
	 <%= form_for @item do |f| %>
	 	<%= f.label :name %>
		<%= f.text_field :name, placeholder: 'i.e. Bitcoin Minnig Rig' %>
		<%= f.label :city%>
		<%= f.text_field :city, placeholder: 'e.x Los Angeles' %>
		<%= f.label :state%>
		<%=		f.select(:state, options_for_select(us_states, "CA"))%>
		<%= f.label :zipcode%>
		<%= f.text_field :zipcode , placeholder: '5 digit zipcode'  %>

    <%#= f.file_field :image %>
		<%= f.label :description%>
		<%= f.text_area :description,  cols: 40, rows: 4, placeholder: 'A brief description of your item'  %>
		<%= f.label :Category%>
		<%= f.collection_select :category_id, Category.order(:name),:id,:name, include_blank: false %>
		<%= f.label "Phone number"%>
		<%= f.text_field :phone_number, :maxlength => 10, :size => 15, placeholder: '(555)-523-5678' %>
		<%= f.label "$ price"%>
		<%= f.text_field :price , placeholder: 'i.e. 5.00 $'  %>

	<center>
		<%= f.submit %>
	</center>
<% end %>
